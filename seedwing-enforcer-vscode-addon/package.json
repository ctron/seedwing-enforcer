{
  "name": "seedwing-enforcer-lsp",
  "description": "seedwing enforcer language server",
  "license": "MIT",
  "version": "1.0.0",
  "categories": [],
  "keywords": [
    "language-server",
    "tower-lsp"
  ],
  "repository": {
    "url": "https://github.com/ctron/seedwing-enforcer-lsp"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "enabledApiProposals": [],
  "activationEvents": [
    "workspaceContains:**/.enforcer.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "seedwing-enforcer-lsp",
      "properties": {
        "seedwing-enforcer-lsp.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "seedwing-enforcer.dependencies",
          "name": "Discovered Dependencies"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "rm -rf dist && tsc -b -w",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "build": "webpack --config webpack.config.js",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.10",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@vscode/test-electron": "^2.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.18",
    "eslint": "^7.32.0",
    "glob": "^7.2.3",
    "mocha": "^10.2.0",
    "typescript": "^4.9.4",
    "vscode-uri": "^3.0.7"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "packageurl-js": "^1.0.0",
    "@vscode/wasm-wasi": "^0.8.2",
    "@vscode/sync-api-client": "^0.8.1",
    "@vscode/sync-api-service": "^0.8.1"
  }
}